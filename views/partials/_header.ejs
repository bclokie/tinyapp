<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class=".form-inline" id="navbarNavAltMarkup">
      <%- if (username.name) { %>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <a class="nav-item nav-link"><%= username.name %></a>
          <a class="nav-item nav-link">
            <form method="POST" action="/logout">
              <button type="submit" class="btn btn-light">Logout</button>
             </form>
          </a>
        </div>
      <% } else { %>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
          <label for="username"></label>
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="username"
            style="width: 250px; margin: 0.5em"
          />
          <button type="submit" class="btn btn-light">Login</button>
        </div>
      </form>
      <% } %>
    </else>
    </div>
  </nav>
</header>
